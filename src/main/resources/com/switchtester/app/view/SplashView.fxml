<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-background-radius: 10;" xmlns="http://javafx.com/javafx/8.0.161" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.switchtester.app.viewmodel.SplashViewModel">
   <children>
      <ImageView fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/LSCS.png" />
         </image>
      </ImageView>
      <Label text="Switch Tester Application" textFill="WHITE">
         <font>
            <Font name="Inter Regular" size="24.0" />
         </font>
      </Label>
      <ProgressBar fx:id="loadingProgressBar" prefWidth="200.0" progress="0.0" />
      <Label text="Loading..." textFill="#cccccc">
         <font>
            <Font name="Inter Regular" size="14.0" />
         </font>
      </Label>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
